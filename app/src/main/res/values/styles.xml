<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyMusic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#0288d1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/toolbar_color</item>
        <item name="subtitleTextColor">@color/toolbar_color</item>
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="AppToolbar.NavBack">
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationContentDescription">@string/content_desc_back</item>
    </style>

</resources>