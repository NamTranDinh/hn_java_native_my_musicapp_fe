<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space_view">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_ic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/ic_radius">

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_topic_height"
            android:scaleType="centerCrop"
            android:src="@drawable/background_header_layout"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view_ic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/space_view"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="2dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:visibility="visible" />

</RelativeLayout>