<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_layout_favor"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_favor_song"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_default_height"
        app:navigationIcon="@drawable/ic_back_black"
        app:title="@string/text_title_song_favor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_song_favor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_favor_song"
        android:layout_marginTop="12dp"
        tools:itemCount="10"
        tools:listitem="@layout/item_song" />

</RelativeLayout>