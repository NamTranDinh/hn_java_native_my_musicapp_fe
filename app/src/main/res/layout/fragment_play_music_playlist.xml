<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#808080">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppToolbar.NavBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_size"
        android:background="@android:color/transparent"
        app:contentInsetStart="0dp"
        app:menu="@menu/menu_play_music_playlist"
        app:title="@string/text_play_music_playlist_n" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_song"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_song_sw_delete" />

</LinearLayout>